{
	"compilerOptions": {
		//*
		"outDir": "dist",
		"declaration": true,
		"target": "es6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		//*
		"noEmit": false,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"paths": {
			"@/*": ["./*"]
		}
	},
	//*
	"exclude": [
		"node_modules",
		"dist",
		"docs",
		"next",
		"next.config.js",
		".eslintrc.json"
	]
}
